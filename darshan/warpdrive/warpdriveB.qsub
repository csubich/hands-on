# make sure scratch dir exists
mkdir -p /projects/ATPESC2018/$USER
# set striping parameters to use all servers
lfs setstripe -c -1 /projects/ATPESC2018/$USER

# delete old file if present
rm -rf /projects/ATPESC2018/$USER/warpdriveB

# submit job
aprun -n 256 -N 64 ./warpdriveB /projects/ATPESC2018/$USER/
